<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fieldinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.greenhousefields.Fieldinfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/field_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feld 2"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="?android:attr/colorPrimary"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    />


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/field_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomate"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="?android:attr/colorPrimary"
                    android:textSize="34sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/watering_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="?colorPrimary"
                    android:text="Ernteinfos" />

                <TextView
                    android:id="@+id/planted_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:text="Gepflanzt:"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/harvest_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:text="@string/txterntezeitpunkt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="?colorPrimary"
                    android:text="@string/txthumidity" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtstartofslidervalue"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="?colorPrimary"
                    android:text="Gießzustand" />

                <TextView
                    android:id="@+id/watering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:text="Gießzustand: Aus"
                    android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <!-- Hier befindet sich das ursprüngliche äußere LinearLayout -->

                <Button
                    android:id="@+id/btn_new_plant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="Neue Pflanze" />

                <Button
                    android:id="@+id/btn_harvest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="Ernten" />

        </LinearLayout>

    </LinearLayout>

